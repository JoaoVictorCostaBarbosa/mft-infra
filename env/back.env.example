# ===========================
# DATABASE CONFIGURATION
# ===========================
# Full database connection string used by the application
# Format: postgres://<user>:<password>@<host>:<port>/<database>
DATABASE_URL=postgres://youruser:yourpassword@db:5432/myfittracker_db

# ===========================
# JWT CONFIGURATION
# ===========================
# Secret key used to sign access tokens (keep this secure)
SECRET_ACCESS_KEY=your_access_secret_key

# Secret key used to sign refresh tokens (keep this secure)
SECRET_REFRESH_KEY=your_refresh_secret_key

# Access token expiration time in minutes
ACCESS_MINUTES=60

# Refresh token expiration time in days
REFRESH_DAYS=30


# ===========================
# MAIL SERVICE CONFIGURATION
# ===========================
# SMTP server host (e.g. smtp.gmail.com)
SMTP_HOST=smtp.example.com

# SMTP server port (e.g. 587 for TLS, 465 for SSL)
SMTP_PORT=587

# Enable secure connection (true or false)
SMTP_SECURE=false

# SMTP authentication user (usually an email address)
SMTP_USER=your_email@example.com

# SMTP authentication password or app password
SMTP_PASS=your_email_password


# ===========================
# BUCKET / OBJECT STORAGE (Cloudflare R2)
# ===========================
# Access key ID for the bucket service
R2_ACCESS_KEY_ID=your_r2_access_key_id

# Secret access key for the bucket service
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key

# Bucket name where files will be stored
R2_BUCKET_NAME=myfittracker-bucket

# S3-compatible endpoint for Cloudflare R2
# Format: https://<account_id>.r2.cloudflarestorage.com
R2_S3_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com

# Public base URL used to access stored files (CDN or custom domain)
R2_PUBLIC_BASE_URL=https://cdn.myfittracker.com
